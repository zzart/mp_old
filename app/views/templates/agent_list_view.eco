<div id="view-menu">
        <form>
            <fieldset data-role="controlgroup" data-type="horizontal" data-theme="b">
                <button data-icon="refresh" data-iconpos="notext" id='refresh'>Odśwież</button>
                <a href='/agenci/dodaj' class="ui-btn ui-icon-edit ui-btn-icon-left" >Dodaj</a>

                <label for="select-action" class="ui-hidden-accessible ui-icon-action">Akcja</label>
                <select name="select-action" id="select-action">
                    <option selected disabled>Akcja</option>
                    <option value="usun">Usuń</option>
                </select>
                <label for="select-filter" class="ui-hidden-accessible ui-icon-user">Filtr</label>
                <select name="select-filter" id="select-filter" data-filter='agent_type'>
                    <option selected disabled>Filtr</option>
                    <option value="">Wszyscy</option>
                    <option value="0">Pośrednik</option>
                    <option value="1">Administrator nieruchomości</option>
                    <option value="2">Menadzer</option>
                    <option value="3">Wsparcie IT</option>
                </select>
                <label for="branch-filter" class="ui-hidden-accessible ui-icon-user">Filtr</label>
                <select name="branch-filter" id="branch-filter" data-filter='branch'>
                    <option selected disabled>Oddział</option>
                    <option value="">Wszystkie</option>
                    <% for key , val of @branches : %>
                    <option value="<%= key %>"><%= val %></option>
                    <% end %>
                </select>
            </fieldset>
    </div>


<table data-role="table" id="list-table" data-mode="columntoggle" class="tablesorter ui-responsive ui-shadow table-stroke table-stripe"
data-filter="true" data-input="#filterTable-input"  data-column-btn-text="Wybierz kolumny" data-column-btn-theme="b" data-column-popup-theme="a">
     <thead>
       <tr class='th-groups'>
         <th width="2%"> <label> <input name="all" id="all" data-mini="true"  type="checkbox"> </label> </th>
         <th>ID</th>
         <th>Oddział&nbsp;&nbsp;</th>
         <th>Imię&nbsp;&nbsp;</th>
         <th data-priority="2">Nazwisko&nbsp;&nbsp;</th>
         <th data-priority="2">Login&nbsp;&nbsp;</th>
         <th data-priority="2">Email&nbsp;&nbsp;</th>
         <th data-priority="4">Telefon&nbsp;&nbsp;</th>
         <th data-priority="4">Aktywny&nbsp;&nbsp;</th>
         <th data-priority="6">Admin&nbsp;&nbsp;</th>
         <th data-priority="6">Typ&nbsp;&nbsp;</th>
       </tr>
     </thead>
     <tbody>
      <% for item in @collection : %>

       <tr>
         <td width="2%"> <label> <input name="<%= item['id'] %>" id="<%= item['id'] %>" data-mini="true"  type="checkbox"> </label> </td>
         <td><a href='/agenci/<%= item['id'] %>'><%= item['id'] %></a></td>
         <td><%= item['branch_func'] %></td>
         <td><a href='/agenci/<%= item['id'] %>'><%= item['first_name'] %></a></td>
         <td><a href='/agenci/<%= item['id'] %>'><%= item['surname'] %></a></td>
         <td><a href='/agenci/<%= item['id'] %>'><%= item['username'] %></a></td>
         <td><%= item['email'] %></td>
         <td><%= item['phone'] %></td>
         <td><%= item['is_active_func'] %></td>
         <td><%= item['is_admin_func'] %></td>
         <td><%= item['agent_type_func'] %></td>
       </tr>
      <% end %>
     </tbody>
   </table>


